acl confiables {
	127.0.0.0/8;
	192.168.57.0/24;
}

options {
	directory "/var/cache/bind";

	// Enviamos las consultas no autorizadas al servidor OpenDNS
	forwarders {
		208.67.222.222;
	};

	// Activamos el dnsssec-validation
	dnssec-validation yes;

	//Decimos que no escuche en IPv6 por si acaso
	listen-on-v6 { none; };
};
